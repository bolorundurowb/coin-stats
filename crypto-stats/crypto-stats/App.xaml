<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crypto_stats.App">
    <Application.Resources>
        <ResourceDictionary Source="ThemeResources/DarkTheme.xaml" />
        
        <Style x:Key="PrimaryHeaderStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}"></Setter>
            <Setter Property="FontAttributes" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="45"></Setter>
        </Style>
        
        <Style x:Key="PrimaryTextStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}"></Setter>
        </Style>
        
        <Style x:Key="SecondaryTextStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource SubTextColor}"></Setter>
        </Style>
        
        <Style x:Key="PageStyle" TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{DynamicResource PageBackgroundColor}"></Setter>
        </Style>
        
        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{DynamicResource PageBackgroundColor}"/>
            <Setter Property="BarTextColor" Value="{DynamicResource PrimaryColor}"/>
        </Style>
    </Application.Resources>
</Application>
