<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crypto_stats.App">
    <Application.Resources>
        <ResourceDictionary Source="ThemeResources/DarkTheme.xaml" />

        <Style x:Key="PageStyle" TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{DynamicResource PageBackgroundColor}" />
            <Setter Property="Padding" Value="15, 10, 15, 5" />
            <Setter Property="NavigationPage.HasNavigationBar" Value="False" />
        </Style>
        
        <Style x:Key="PageHeaderStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource PrimaryColor}"></Setter>
            <Setter Property="FontAttributes" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="42"></Setter>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"></Setter>
            <Setter Property="FontFamily" Value="GorditaBold"></Setter>
        </Style>
        
        <Style x:Key="PageHeaderButtonStyle" TargetType="Button">
            <Setter Property="TextColor" Value="{DynamicResource PrimaryColor}"></Setter>
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="VerticalOptions" Value="Center"></Setter>
            <Setter Property="FontFamily" Value="FAS"></Setter>
            <Setter Property="HeightRequest" Value="47"></Setter>
            <Setter Property="WidthRequest" Value="70"></Setter>
            <Setter Property="BackgroundColor" Value="Transparent"></Setter>
        </Style>
        
        <Style x:Key="SearchBarStyle" TargetType="SearchBar">
            <Setter Property="BackgroundColor" Value="{DynamicResource SearchBarBackground}"></Setter>
            <Setter Property="TextColor" Value="{DynamicResource SearchTextColour}"></Setter>
            <Setter Property="Placeholder" Value="Search..."></Setter>
            <Setter Property="HeightRequest" Value="40"></Setter>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"></Setter>
            <Setter Property="FontFamily" Value="Gordita"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Margin" Value="0, 10, 0, 10"></Setter>
        </Style>
        
        <Style x:Key="PrimaryHeaderStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}"></Setter>
            <Setter Property="FontAttributes" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="45"></Setter>
        </Style>
        
        <Style x:Key="PrimaryTextStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}"></Setter>
        </Style>
        
        <Style x:Key="SecondaryTextStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource SubTextColor}"></Setter>
        </Style>
        
        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{DynamicResource PageBackgroundColor}"/>
            <Setter Property="BarTextColor" Value="{DynamicResource PrimaryColor}"/>
        </Style>
    </Application.Resources>
</Application>
