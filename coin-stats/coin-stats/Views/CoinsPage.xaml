<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="coin_stats.Views.CoinsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             Padding="15, 10, 15, 5"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout
                Orientation="Horizontal">
                <Label
                    Text="Crypto Stats"
                    FontSize="45"
                    TextColor="#E19832"
                    HorizontalOptions="FillAndExpand"
                    FontAttributes="Bold" />
                <Button
                    Text="&#xf013;"
                    FontSize="25"
                    FontFamily="FAS"
                    VerticalOptions="Center"
                    TextColor="#E19832"
                    BackgroundColor="Transparent"
                    WidthRequest="47"
                    HeightRequest="70"
                    Clicked="ViewSettingsPage" />
            </StackLayout>

            <SearchBar x:Name="txtSearch"
                       Margin="0, 10, 0, 10"
                       HorizontalOptions="FillAndExpand"
                       HeightRequest="40"
                       Placeholder="Search"
                       BackgroundColor="{DynamicResource SearchBarBackground}"
                       TextChanged="SearchStats" />

            <ActivityIndicator x:Name="prgLoading"
                               HorizontalOptions="Center"
                               VerticalOptions="CenterAndExpand"
                               WidthRequest="35"
                               HeightRequest="35"
                               IsEnabled="True"
                               IsRunning="True"
                               IsVisible="True"
                               BackgroundColor="Transparent"
                               Color="#E19832" />

            <ListView x:Name="lstCryptoStats"
                      HorizontalOptions="Fill"
                      VerticalOptions="FillAndExpand"
                      BackgroundColor="Transparent"
                      IsPullToRefreshEnabled="True"
                      SelectionMode="None"
                      HasUnevenRows="True"
                      IsVisible="False"
                      Refreshing="OnRefresh"
                      ItemTapped="ViewCoinDetails">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid
                                Padding="0, 10, 0, 10"
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackLayout
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Orientation="Vertical"
                                    HorizontalOptions="FillAndExpand">
                                    <StackLayout
                                        Orientation="Horizontal">
                                        <Label
                                            Text="{Binding Rank}"
                                            TextColor="{DynamicResource SubTextColor}"
                                            VerticalOptions="End" />
                                        <Label
                                            Text="{Binding Symbol}"
                                            TextColor="{DynamicResource PrimaryTextColor}"
                                            FontSize="20" />
                                    </StackLayout>

                                    <Label
                                        Text="{Binding Name}"
                                        TextColor="{DynamicResource SubTextColor}" />
                                </StackLayout>

                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Text="{Binding PriceInUsd, StringFormat='${0:N}'}"
                                    TextColor="{DynamicResource PrimaryTextColor}"
                                    VerticalOptions="Center"
                                    HorizontalTextAlignment="End"
                                    FontSize="18" />

                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Text="{Binding TwentyFourHourPercentageChange, StringFormat='{0:+0.##;-0.##;+#.##;-#.##;0}%'}"
                                    TextColor="{Binding TwentyFourHourChangeColour}"
                                    VerticalOptions="Center"
                                    HorizontalTextAlignment="End"
                                    FontSize="18" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>